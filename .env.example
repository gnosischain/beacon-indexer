# Beacon Node Configuration
BEACON_NODE_URL=http://your-beacon-node:5052

# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=ethereum
CLICKHOUSE_SECURE=true
CLICKHOUSE_VERIFY=false

# Scraper Configuration
SCRAPER_MODE=realtime
ENABLED_SCRAPERS=core_block,operational_events,validator

# Historical/Parallel Mode Settings
HISTORICAL_START_SLOT=0
HISTORICAL_END_SLOT=

# Performance Settings
BATCH_SIZE=1000
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30

# Parallel Mode Settings
PARALLEL_WORKERS=4
ENABLE_WORKER_POOL=true
WORKER_POOL_SIZE=8
WORKER_BATCH_SIZE=100
WORKER_PROGRESS_LOG_INTERVAL=100

# State Management Settings
STATE_RANGE_SIZE=50000
STATE_UPDATE_BATCH_SIZE=1000
MAX_RETRY_ATTEMPTS=3
STALE_JOB_TIMEOUT_MINUTES=30

# State Manager Bulk Operations
STATE_BULK_INSERT_BATCH_SIZE=1000
STATE_BULK_CHECK_BATCH_SIZE=1000
STATE_BULK_LOG_INTERVAL=5000

# State Caching
ENABLE_STATE_CACHING=true
STATE_CACHE_SIZE=10000
STATE_CACHE_TTL=300

# Gap Detection
GAP_CHECK_INTERVAL_SECONDS=300

# Logging
LOG_LEVEL=20

# Bulk Insertion Service
BULK_INSERT_QUEUE_SIZE=10000
BULK_INSERT_MAX_WAIT_TIME=5
BULK_INSERT_BATCH_SIZE=5000

# Validator Scraper Settings
VALIDATOR_BATCH_SIZE=1000
VALIDATOR_UPDATE_FREQUENCY_EPOCHS=225

# Reward Scraper Settings
REWARD_BATCH_SIZE=100

# Blob Scraper Settings
BLOB_BATCH_SIZE=50

# Connection Pool Settings
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_TIMEOUT=30

# Database Connection Pool
DB_POOL_SIZE=5
DB_POOL_RECYCLE=3600

# API Rate Limiting
API_RATE_LIMIT_PER_SECOND=100
API_RATE_LIMIT_BURST=200

# Memory Management
ENABLE_MEMORY_PROFILING=false
MAX_MEMORY_MB=8192

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
METRICS_PORT=9090

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
TRACE_REQUESTS=false